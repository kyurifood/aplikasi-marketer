<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pusat.android.makananbekuenak.com.aplikasi_marketer.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:id="@+id/textView14" />

            <Spinner
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerbank"
                android:prompt="@string/pk1"
                android:entries="@array/JKlist"
                android:layout_below="@+id/textView8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nomor Rekening :"
                android:id="@+id/textView2"
                android:layout_below="@+id/spinner" />

            <EditText
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_below="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nama Pemilik :"
                android:id="@+id/textView"
                android:layout_below="@+id/editText" />

            <EditText
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_below="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cabang :"
                android:id="@+id/textView3"
                android:layout_below="@+id/editText2"/>

            <EditText
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_below="@+id/textView3"/>

            <LinearLayout style="@style/ComponentLayout"
                android:orientation="horizontal"
                android:gravity="right">

                <Button style="@style/GreenButton"
                    android:text="ok"
                    android:id="@+id/ok"/>

                <Button style="@style/RedButton"
                    android:text="cancel"
                    android:id="@+id/cancel"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
