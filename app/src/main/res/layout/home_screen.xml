<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.28">


    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="18dp"
            android:orientation="vertical">


            <Button
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:text="|Produk"
                android:id="@+id/produk"
                android:drawableLeft="@drawable/icon_produk"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:text="|Pesanan"
                android:id="@+id/pesanan"
                android:drawableLeft="@drawable/ic_pesanan"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:text="|Laporan"
                android:id="@+id/laporan"
                android:onClick="btn_laporan"
                android:drawableLeft="@drawable/ic_laporan"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:text="|Kotak Masuk"
                android:id="@+id/kotakmasuk"
                android:drawableLeft="@drawable/ic_pesan"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:text="|Pengaturan"
                android:id="@+id/pengaturan"
                android:onClick="btn_pengaturan"
                android:drawableLeft="@drawable/ic_pengaturan"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"></LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>